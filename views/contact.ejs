<body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">Liberty Education</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                    <a class="nav-link" href="/courses">Courses</a>
                    <a class="nav-link" href="/aboutus">About Us</a>
                    <a class="nav-link active" aria-current="page" href="/contact">Contact Us</a>
                    <% if(currentUser) { %>
                        <a class="nav-link" href="/sportal">Student Portal</a>
                        <a class="nav-link" href="/tportal">Teacher Portal</a>
                        <% } %>
                            <span class="nav-link"> | </span>
                            <% if(!currentUser) { %>
                                <a class="nav-link" href="/login">Login</a>
                                <a class="nav-link" href="/register">Register</a>
                                <% } else { %>
                                    <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                                    <% } %>
                </nav>
            </div>
        </header>
        <main class="px-3">
            <div class="row">
                <h1 class="mb-4"><strong>Contact Us</strong></h1>
                <div class="col-xl-2"></div>
                <div class="col-xl-4 col-lg-12 text-start">
                    <p class="lead"> <a href="mailto:kori.haring@libertyeducation.org" class="text-decoration-none text-light"><i class="fas fa-envelope"></i> kori.haring@libertyeducation.org</a></p>
                    <p class="lead"><a href="tel:8057919139" class="text-decoration-none text-light"><i class="fas fa-phone-alt"></i> (805) 791-9139</a></p>
                    <p class="lead"><a href="https://www.facebook.com/libertyeducationofutah/" target="_blank" class="text-decoration-none text-light"><i class="fab fa-facebook-square"></i> LibertyEducationOfUtah</a></p>
                </div>
                <div class="col-xl-4 col-lg-12 text-start">
                    <p class="lead"><i class="fas fa-clock"></i> 8-5p.m. M-F</p>
                    <p class="lead"><a href="https://goo.gl/maps/wQKQpVVMGmzrYLBG6" target="_blank" class="text-decoration-none text-light"><i class="fas fa-map-marker-alt"></i> 123 Main St. American Fork, UT 84000</a></p>
                </div>
                <div class="col-xl-2"></div>
            </div>
        </main>
        <footer class="mt-auto text-white-50">
            <%- include('./partials/flash.ejs') %>
                <p>&copy; 2021 LibertyLaunchGroup</p>
        </footer>
    </div>
    <script src="/scripts/popper.min.js"></script>
    <script src="/scripts/bootstrap.min.js"></script>
