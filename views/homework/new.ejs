<% layout('layouts/teacher-boilerplate') %>
    <div class="row">
        <div class="card shadow mb-5">
            <div class="card-body">
                <div class="row">
                    <div class="col-2 mt-2">
                        <a href="/homework/" class="btn btn-dark font-weight-bold mb-1"><i
                                class="fas fa-chevron-left"></i></a>
                    </div>
                    <h1 class="col-8 text-center mt-4">New Homework</h1>
                    <div class="col-2"></div>
                </div>
                <form action="/homework/" method="POST" novalidate class="validated-form">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="subjectLine">Subject Line</label>
                                        <input class="form-control" type="text" placeholder="Finish Chapter 10"
                                            id="subjectLine" name="homework[subjectLine]" required autofocus>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="noteCategory"><i class="fas fa-tags"></i>
                                            Category</label>
                                        <input class="form-control" type="text" id="noteCategory" placeholder="Math"
                                            name="note[noteCategory]" required>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="dueDate">Due Date</label>
                                        <input class="form-control" type="date" id="dueDate" name="homework[dueDate]"
                                            required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="pointsPossible">Coins Possible</label>
                                        <input class="form-control" type="number" id="pointsPossible"
                                            name="homework[pointsPossible]" placeholder="20" required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="url">Related Link (opt)</label>
                                        <input class="form-control" type="text"
                                            placeholder="https://www.youtube.com/..." id="url" name="homework[url]">
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" for="stuId">Assigned to Student</label>
                                        <select class="form-select" id="stuId" name="homework[stuId]" required>
                                            <option selected></option>
                                            <% for(let student of students) { %>
                                                <option value="<%=student._id%>">
                                                    <%=student.firstName%>
                                                        <%=student.lastName%>
                                                </option>
                                                <% } %>
                                        </select>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="description">Description</label>
                                    <textarea class="form-control rounded-0" id="description"
                                        name="homework[description]" rows="7"
                                        placeholder="For this assignment, you must ..." required></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mb-3 mt-3 text-center">
                                    <button class="btn btn-lg btn-success"><i class="fas fa-clipboard-check"></i> Add
                                        Homework</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <p class="text-center"><a href="/homework" class="mb-3 btn btn-lg btn-danger"><i
                            class="fas fa-times"></i> Cancel</a></p>
            </div>
        </div>
    </div>