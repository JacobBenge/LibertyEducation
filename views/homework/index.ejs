<% layout('layouts/teacher-boilerplate') %>
    <div class="row">
        <div class="card shadow mb-5">
            <div class="card-body">
                <div class="row">
                    <div class="col-2 mt-2">
                        <a href="/tportal/" class="btn btn-dark font-weight-bold mb-1"><i class="fas fa-chevron-left"></i></a>
                    </div>
                    <h1 class="col-8 text-center mt-4">All Homework</h1>
                    <div class="col-2 mt-4">
                        <a href="/homework/new" class="btn btn-primary"><i class="fas fa-book-open"></i> Add Homework</a>
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Due Date</th>
                            <th scope="col">Subject Line</th>
                            <th scope="col">Assigned To</th>
                            <th scope="col">Category</th>
                            <th scope="col">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- https://stackoverflow.com/questions/25159330/convert-an-iso-date-to-the-date-format-yyyy-mm-dd-in-javascript -->
                        <% for (let hw of homework) { %>
                            <tr>
                                <td scope="row">
                                    <%= hw.dueDate.toISOString().substring(0, 10) %>
                                </td>
                                <td scope="row">
                                    <%=hw.subjectLine%>
                                </td>
                                <td scope="row">
                                    <%=hw.assignedStudent%>
                                </td>
                                <td scope="row">
                                    <%=hw.category%>
                                </td>
                                <td scope="row"><a class="btn btn-info" href="/homework/<%=hw._id%>"><i class="fas fa-long-arrow-alt-right"></i></a></td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>