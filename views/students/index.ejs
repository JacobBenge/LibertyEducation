<% layout('layouts/teacher-boilerplate') %>
    <div class="row">
        <div class="card shadow mb-5">
            <div class="card-body">
                <div class="row">
                    <div class="col-2 mt-2">
                        <a href="/tportal/" class="btn btn-dark font-weight-bold mb-1"><i class="fas fa-chevron-left"></i></a>
                    </div>
                    <h1 class="text-center col-8 mt-4">All Students</h1>
                    <div class="col-2 mt-4">
                        <a href="/students/new" class="btn btn-primary"><i class="fas fa-user-plus"></i> Add Student</a>
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Registration Code</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Pri Contact Last</th>
                            <th scope="col">Pri Contact First</th>
                            <th scope="col">Access</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sorted by student's last name -->
                        <% const sortedStudents = students.sort((a, b) => a.lastName.localeCompare(b.lastName))%>
                                <% for (let student of sortedStudents) { %>
                                    <tr>
                                        <td scope="row">
                                            <%=student._id%>
                                        </td>
                                        <td>
                                            <%=student.lastName%>
                                        </td>
                                        <td>
                                            <%=student.firstName%>
                                        </td>
                                        <td>
                                            <%=student.primaryContactLast%>
                                        </td>
                                        <td>
                                            <%=student.primaryContactFirst%>
                                        </td>
                                        <td><a class="btn btn-info" href="/students/<%=student._id%>"><i class="fas fa-long-arrow-alt-right"></i>
                                                <%=student.title%>
                                            </a></td>
                                    </tr>
                                    <% } %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>