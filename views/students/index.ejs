<% layout('layouts/teacher-boilerplate') %>
    <div class="row">
        <div class="card shadow mb-5">
            <div class="card-body">
                <div class="row">
                    <div class="col-2 mt-2">
                        <a href="/tportal/" class="btn btn-dark font-weight-bold mb-1">&lt;-</a>
                    </div>
                    <h1 class="text-center col-8 mt-4">All Students</h1>
                    <div class="col-2 mt-4">
                        <a href="/students/new" class="btn btn-primary">Add New Student</a>
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Registration Code</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Gender</th>
                            <th scope="col">City</th>
                            <th scope="col">State</th>
                            <th scope="col">Access</th>
                        </tr>
                    </thead>
                    <tbody>
                                <% for (let student of students) { %>
                                    <tr>
                                        <td scope="row">
                                            <%=student._id%>
                                        </td>
                                        <td>
                                            <%=student.lastName%>
                                        </td>
                                        <td>
                                            <%=student.firstName%>
                                        </td>
                                        <td>
                                            <%=student.gender%>
                                        </td>
                                        <td>
                                            <%=student.city%>
                                        </td>
                                        <td>
                                            <%=student.stateCode%>
                                        </td>
                                        <td><a class="btn btn-secondary" href="/students/<%=student._id%>">Profile
                                                <%=student.title%>
                                            </a></td>
                                    </tr>
                                    <% } %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>