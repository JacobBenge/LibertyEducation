<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6">
        <div class="card mb-5">
            <div class="card-body">
                <h5 class="card-title"><%=student.firstName%> <%=student.lastName%></h5>
                <p class="card-text">Date of Birth: <%=student.dateOfBirth%></p>
                <p class="card-text">School Year: <%=student.schoolYear%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Primary: <%=student.primaryContactFirst%> <%=student.primaryContactLast%></li>
                <li class="list-group-item">Primary: <%=student.primaryContactRelationship%></li>
                <li class="list-group-item">Primary: <%=student.primaryContactPhone%></li>
                <li class="list-group-item">Primary: <%=student.primaryContactEmail%></li>
                <li class="list-group-item text-muted">Secondary: <%=student.secondaryContactFirst%> <%=student.secondaryContactLast%></li>
                <li class="list-group-item text-muted">Secondary: <%=student.secondaryContactRelationship%></li>
                <li class="list-group-item text-muted">Secondary: <%=student.secondaryContactPhone%></li>
                <li class="list-group-item text-muted">Secondary: <%=student.secondaryContactEmail%></li>
                <li class="list-group-item">Address Line 1: <%=student.addressLine1%></li>
                <li class="list-group-item">Address Line 2: <%=student.addressLine2%></li>
                <li class="list-group-item">City: <%=student.city%></li>
                <li class="list-group-item">State: <%=student.stateCode%></li>
                <li class="list-group-item">ZipCode First 5:<%=student.zipCodeBase%></li>
                <li class="list-group-item">ZipCode Last 4:<%=student.zipCodeExtension%></li>
            </ul>
            <div class="card-body">
                <a href="/students/<%=student._id%>/edit" class="card-link btn btn-info">Edit</a>
                <form class="d-inline" action="/students/<%=student._id%>?_method=DELETE" method="POST">
                    <button class= "btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                <a href="/students">Back to All Students</a>
            </div>
        </div>
    </div>
</div>